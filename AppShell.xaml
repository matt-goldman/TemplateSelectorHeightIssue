<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TemplateSelectorHeightIssue.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TemplateSelectorHeightIssue"
    xmlns:pages="clr-namespace:TemplateSelectorHeightIssue.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="TemplateSelectorHeightIssue">

    <TabBar>
        <Tab Title="Issue">
            <ShellContent ContentTemplate="{DataTemplate pages:FirstTab}"/>
        </Tab>

        <Tab Title="Reference">
            <ShellContent ContentTemplate="{DataTemplate pages:SecondTab}"/>
        </Tab>

        <Tab Title="Default">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
    </TabBar>

</Shell>
